<?php $query = new WP_Query(([
	'post_type' =>  'post',
	'posts_per_page'    =>  50,
])); if ( $query->have_posts() ) : while ( $query->have_posts() ) : $query->the_post(); ?>
	<h3><?php echo e(get_the_title()); ?></h3>
<?php endwhile; else : ?>
	<h3>Empty</h3>
<?php endif; wp_reset_postdata(); ?>